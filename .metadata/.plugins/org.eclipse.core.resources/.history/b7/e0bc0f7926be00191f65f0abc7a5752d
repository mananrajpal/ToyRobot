
public class Game {
	private int GameBoard [][];
	private int Location [][];
	private Directions Facing;
	final int MaxX = 4;
	final int MaxY = 4;
	final int MinX = 0;
	final int MinY = 0;
	
	public Game()
	{
		GameBoard = new int [4][4];
		this.Location  = new int [0][0];
		this.Facing = Directions.North;
	}
	
	public boolean PlaceRobot(int[][] location, Directions direction)
	{
		for(int i = 0; i <= MaxX; i++)
		{
			for(int j=0; j < MaxY; j++)
			{
				if(location[i][j] > 4)
				{
					//do nothing
					return false;
				}
				else if(location[i][j] < 0)
				{
					//do nothing
					return false;
				}
			}
		}
		if((direction != Directions.East) || (direction != Directions.West) || (direction != Directions.South)||(direction != Directions.North))
		{
			//do nothing
			return false;
		}
		this.Location = location;
		this.Facing = direction;
		return true;
	}
	
}
