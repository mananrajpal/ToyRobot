
public class Game {
	private int GameBoard [][];
	private int Robot;
	private Directions Facing;
	final int Max = 4;
	final int Min = 0;
	
	public Game()
	{
		GameBoard = new int [5][5];
		Robot = 0;
		for(int i = 0; i <= Max; i++)
		{
			for(int j=0 ; j <= Max; j++)
			{
				GameBoard[i][j] = 0;
			}
		}
	}
	
	public void setGame()
	{
		int position = 0;
		for(int i=0; i <= Max; i++)
		{
			for(int j = 0; j <= Max; j++)
			{
				GameBoard[i][j] = position++;
			}
		}
		Robot= 0;
	}
	
	public int getPosition()
	{
		return Robot;
	}
	
	public Boolean PlaceRobot(int location, Directions direction)
	{
		for(int i = 0; i <= Max; i++)
		{
			for(int j = 0; j <= Max; j++)
			{
				if(GameBoard[i][j] == location)
				{
					//correct location
					this.Robot = location;
					this.Facing = direction;
					return true;
				}
			}
		}
		return false;
	}
	
	public Boolean moveRobot()
	{
		switch(Facing)
		{
			case North:
				if((Robot + 5) <= GameBoard[Max][Max])
				{
					Robot = Robot + 5;
					return true;
				}
				return false;
			case South:
				if((Robot - 5) >= Min)
				{
					Robot = Robot - 5;
					return true;
				}
				return false;
			case East:
				for(int i=0; i <= Max; i++)
				{
					if(GameBoard[i][4] != Robot )
					{
						Robot = Robot + 1;
						return true;
					}
				}
				return false;
				
			case West:
				for(int i = 0; i < Max; i++)
				{
					if(GameBoard[i][0] != Robot)
					{
						Robot = Robot - 1;
						return true;
					}
				}
				return false;
				
			default:
				return false;
		}
	}
	
}
