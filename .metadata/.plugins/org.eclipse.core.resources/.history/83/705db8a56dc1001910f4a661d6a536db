
public class Game {
	private int GameBoard [][];
	private int Robot[][];
	private Directions Facing;
	final int Max = 4;
	final int Min = 0;
	
	public Game()
	{
		GameBoard = new int [5][5];
		Robot = new int [1][1];
		for(int i = 0; i <= Max; i++)
		{
			for(int j=0 ; j <= Max; j++)
			{
				GameBoard[i][j] = 0;
			}
		}
	}
	
	public void setGame()
	{
		int position = 0;
		for(int i=0; i <= Max; i++)
		{
			for(int j = 0; j <= Max; j++)
			{
				GameBoard[i][j] = position++;
			}
		}
		Robot[0][0] = 0;
	}
	
	public int[][] getPosition()
	{
		return Robot;
	}
	
	public Boolean PlaceRobot(int location, Directions direction)
	{
		if((direction != Directions.East) || (direction != Directions.West) || (direction != Directions.South)||(direction != Directions.North))
		{
			//do nothing
			return false;
		}
		this.Robot[0][0] = location;
		this.Facing = direction;
		return true;
	}
	
}
